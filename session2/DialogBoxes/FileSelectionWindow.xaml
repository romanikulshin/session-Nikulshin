<Window x:Class="OOP_LB6_2.DialogBoxes.FileSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP_LB6_2.DialogBoxes"
        mc:Ignorable="d"
        Title="Выбор файла" Height="200" Width="400" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Файлы берутся из папки media" HorizontalAlignment="Center"/>
        <ScrollViewer Grid.Row="1">
            <StackPanel Grid.Row="1" Cursor="Hand">
            <ListBox x:Name="MediaContent" MouseDoubleClick="ListBoxItem_MouseDoubleClick"/>
        </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
